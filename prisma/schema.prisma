generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String    @unique
  password   String
  createdAt  DateTime  @default(now())
  spacedMode String    @default("basic") // 'basic' | 'anki' | 'off'
  problems   Problem[] @relation("UserProblems")
}

model Problem {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation("UserProblems", fields: [userId], references: [id])

  name           String
  platform       String
  problemCode    String?
  link           String
  difficulty     String
  status         String
  category       String[]
  notes          String?
  mistakesMade   String?
  dateSolved     DateTime
  reviewCount    Int
  nextReviewDate DateTime
}
